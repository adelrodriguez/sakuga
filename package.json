{
  "name": "pastry",
  "version": "0.1.0",
  "description": "A simple template to build libraries with Bun",
  "keywords": [
    "bun",
    "library",
    "template"
  ],
  "homepage": "https://github.com/adelrodriguez/pastry#readme",
  "bugs": {
    "url": "https://github.com/adelrodriguez/pastry/issues"
  },
  "license": "MIT",
  "author": "Adel Rodr√≠guez",
  "repository": {
    "type": "git",
    "url": "https://github.com/adelrodriguez/pastry.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "module": "src/index.ts",
  "scripts": {
    "build": "bunup",
    "bump:deps": "bun update --interactive",
    "check": "adamantite check",
    "dev": "bunup --watch",
    "fix": "adamantite fix",
    "release": "changeset publish",
    "init": "bun run --bun scripts/init.ts",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:watch": "bun test --watch",
    "typecheck": "adamantite typecheck",
    "version": "changeset version && bun run format",
    "format": "adamantite format",
    "analyze": "adamantite analyze"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.8",
    "@clack/prompts": "0.11.0",
    "@types/bun": "1.3.5",
    "@typescript/native-preview": "7.0.0-dev.20260108.1",
    "adamantite": "^0.25.0",
    "bunup": "0.16.17",
    "knip": "5.80.1",
    "oxfmt": "0.23.0",
    "oxlint": "1.38.0",
    "oxlint-tsgolint": "0.10.1"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "packageManager": "bun@1.3.1"
}
